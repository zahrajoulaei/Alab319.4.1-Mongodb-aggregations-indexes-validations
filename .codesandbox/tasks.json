    "start": {
      "name": "start",
      "command": "yarn start",
      "runAtStart": true,
      "preview": {
        "port": 5050
      }
    },
    "build": {
      "name": "build",
      "command": "yarn build",
      "runAtStart": false
    }
  }
}
